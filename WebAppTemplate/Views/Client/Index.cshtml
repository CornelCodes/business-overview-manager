@model List<DAL.BOMContext.Company>
@{
    ViewData["Title"] = "Clients";
}

<div id="client-page">
    <div class="container-fluid p-5">

        <div class="container-fluid d-flex flex-column justify-content-center">
            <div class="pb-3 d-flex justify-content-between">
                <h3>Clients</h3>
                <div class="d-flex">
                    <form action="/" method="get">
                        <button type="submit" class="btn btn-dark m-2">Back</button>
                    </form>
                    <form action="/Company/Details/0" method="get">
                        <button class="btn btn-primary m-2" type="submit">Create</button>
                    </form>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Company</th>
                            <th>Name</th>
                            <th>Clients</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model)
                        {
                            foreach (var client in company.Clients)
                            {
                                <tr>
                                    <td>@client.Id</td>
                                    <td>@company.Name</td>
                                    <td>@client.FirstName</td>
                                    <td>@client.LastName</td>
                                    <td class="d-flex justify-content-end">
                                        <button class="btn btn-primary">Edit</button>
                                        <button class="btn btn-danger" style="margin-left: 10px;">X</button>
                                    </td>
                                </tr>
                            }
                            if (company.Clients.Count < 1)
                            {
                                <tr>
                                    <td colspan="4">No clients yet!</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>