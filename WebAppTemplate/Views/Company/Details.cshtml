@model DAL.BOMContext.Company
@{
}

<div id="update-company-page">
    <div class="container-fluid p-5">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1>@(Model.Id == 0 ? "Create" : "Update") Company</h1>
                <form action="/Company" method="get">
                    <button type="submit" class="btn btn-dark">Back</button>
                </form>
            </div>
            <form action="/Company/Update" method="post">
                <div class="card-body text-white bg-dark">
                    <div class="row">
                        <div class="col-4">
                            <h3 class="text-white">
                                Name
                            </h3>
                        </div>
                        <div class="col">
                            <input class="form-control" required type="text" name="Name" value="@Model.Name" />
                        </div>
                    </div>
                    <input class="form-control" type="hidden" name="Id" value="@Model.Id" />
                </div>
                <div class="card-footer bg-white d-flex justify-content-end">
                    <div class="d-flex flex-column justify-content-center">
                        <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Create" : "Save")</button>
                        <a class="nav-link link-dark" href="/Help">Learn more</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
